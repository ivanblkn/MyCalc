<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="CalcButton">
        <item name="android:fontFamily">@font/pyrite</item>
        <item name="android:background">@color/backgroundOfNumbers</item>
        <item name="android:layout_width">@dimen/df_numberSize</item>
        <item name="android:layout_height">@dimen/df_numberSize</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/btn_Size</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:gravity">center_vertical|center_horizontal</item>
    </style>
    <style name="ThemeButton" parent="CalcButton">
        <item name="android:textSize">@dimen/btn_theme_Size</item>
    </style>

    <style name="CalcButtonFrame"  parent="CalcButton">
        <item name="android:background">@drawable/rectangle</item>
    </style>

    <style name="CalcButtonShadow" parent="CalcButton">
        <item name="android:shadowColor">@color/shadow</item>
        <item name="android:shadowDx">@dimen/shadowD</item>
        <item name="android:shadowDy">@dimen/shadowD</item>
        <item name="android:shadowRadius">@dimen/shadowRadius</item>
    </style>

</resources>